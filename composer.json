{
    "name": "edisonlabs/merge-yaml",
    "type": "composer-plugin",
    "description": "Provides a composer plugin which merges yaml files.",
    "license": "GPL-2.0+",
    "autoload": {
        "psr-4": {
            "EdisonLabs\\MergeYaml\\": "src/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "composer-plugin-api": "^2.0",
        "symfony/finder": "^4 || ^6",
        "symfony/yaml": "^4 || ^5 || ^6"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.4.1",
        "composer/composer": "^2",
        "php-coveralls/php-coveralls": "^2.0"
    },
    "extra": {
        "class": "EdisonLabs\\MergeYaml\\Plugin"
    }
}
